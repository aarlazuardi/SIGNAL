@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 142.1 76.2% 36.3%;
    --primary-foreground: 355.7 100% 97.3%;
    --secondary: 210 40% 96.1%;
    --secondary-foreground: 222.2 47.4% 11.2%;
    --muted: 210 40% 96.1%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96.1%;
    --accent-foreground: 222.2 47.4% 11.2%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 142.1 76.2% 36.3%;
    --radius: 0.75rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 142.1 70.6% 45.3%;
    --primary-foreground: 144.9 80.4% 10%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 142.4 71.8% 29.2%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }

  /* Improved form elements for mobile devices */
  input,
  textarea,
  select,
  button {
    @apply text-base sm:text-sm focus:outline-none;
  }

  /* Improved touch targets on mobile - minimum 44x44px (WCAG recommendation) */
  button,
  a,
  [role="button"] {
    @apply cursor-pointer;
  }

  @media (max-width: 640px) {
    button,
    a,
    [role="button"] {
      min-height: 40px;
      min-width: 40px;
    }
  }

  /* Improve input readability on mobile */
  input,
  textarea {
    @apply text-base sm:text-sm px-3 py-2;
  }
}

/* Responsive typography */
@layer utilities {
  .text-responsive {
    font-size: clamp(1rem, 0.8rem + 1vw, 1.5rem);
  }

  .text-responsive-lg {
    font-size: clamp(1.25rem, 1rem + 1.5vw, 2.5rem);
  }

  .text-responsive-xl {
    font-size: clamp(1.5rem, 1.25rem + 2vw, 3rem);
  }

  /* Mobile-first padding utilities */
  .p-mobile {
    padding: 0.75rem;
  }
  
  @media (min-width: 640px) {
    .p-mobile {
      padding: 1rem;
    }
  }
  
  @media (min-width: 768px) {
    .p-mobile {
      padding: 1.5rem;
    }
  }
  
  /* Mobile-first flex utilities */
  .mobile-stack {
    display: flex;
    flex-direction: column;
  }
  
  @media (min-width: 640px) {
    .mobile-stack {
      flex-direction: row;
    }
  }
  
  /* Mobile-first font sizes */
  .text-mobile {
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
  
  @media (min-width: 640px) {
    .text-mobile {
      font-size: 1rem;
      line-height: 1.5rem;
    }
  }
  
  /* Improved touch targets on small screens */
  .touch-target {
    min-height: 44px;
    min-width: 44px;
  }

  /* Container padding for mobile first approach */
  .container-responsive {
    width: 100%;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }

  @media (min-width: 640px) {
    .container-responsive {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  @media (min-width: 768px) {
    .container-responsive {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .container-responsive {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  /* Improved spacing for mobile */
  .mobile-p {
    padding: 0.75rem;
  }

  @media (min-width: 640px) {
    .mobile-p {
      padding: 1rem;
    }
  }

  @media (min-width: 768px) {
    .mobile-p {
      padding: 1.5rem;
    }
  }

  /* Safe area insets for notched devices */
  .safe-area-inset-top {
    padding-top: env(safe-area-inset-top, 0);
  }

  .safe-area-inset-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
}

@layer components {
  /* Mobile-First responsive text utilities */
  .h1 {
    @apply text-2xl font-bold sm:text-3xl md:text-4xl lg:text-5xl tracking-tight;
    line-height: 1.2;
  }

  .h2 {
    @apply text-xl font-bold sm:text-2xl md:text-3xl lg:text-4xl tracking-tight;
    line-height: 1.2;
  }

  .h3 {
    @apply text-lg font-semibold sm:text-xl md:text-2xl lg:text-3xl;
    line-height: 1.3;
  }

  .h4 {
    @apply text-base font-semibold sm:text-lg md:text-xl lg:text-2xl;
    line-height: 1.3;
  }

  .text-body-large {
    @apply text-base sm:text-lg md:text-xl;
    line-height: 1.5;
  }

  .text-body {
    @apply text-sm sm:text-base;
    line-height: 1.5;
  }

  .text-body-small {
    @apply text-xs sm:text-sm;
    line-height: 1.5;
  }

  /* Mobile friendly buttons */
  .btn-mobile {
    @apply h-10 sm:h-9 px-3 sm:px-2.5 text-sm sm:text-xs;
  }

  /* Card with appropriate mobile spacing */
  .card-mobile {
    @apply p-4 sm:p-6;
  }

  /* Grid layouts with improved mobile defaults */
  .grid-mobile {
    @apply grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6;
  }
}
