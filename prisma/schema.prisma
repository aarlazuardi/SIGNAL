generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  publicKey String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  avatar    String?
  signature String?
  journals  Journal[]
  signedDocuments SignedDocument[] // relasi balik
}

model Journal {
  id        String   @id @default(cuid())
  title     String
  content   String
  signature String?
  publicKey String?
  verified  Boolean  @default(false)
  metadata  Json?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  signedDocuments SignedDocument[] // relasi balik
}

model SignedDocument {
  id         String   @id @default(cuid())
  userId     String
  documentId String
  perihal    String
  hash       String
  signature  String
  signedAt   DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  journal    Journal  @relation(fields: [documentId], references: [id], onDelete: Cascade)
}
